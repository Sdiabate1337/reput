# ===========================================
# REPUT.AI - Environment Variables Template
# ===========================================
# Copy this file to .env.local and fill in your values

# --- PostgreSQL Database ---
DATABASE_URL=postgresql://user:password@localhost:5432/reputai

# --- Twilio (WhatsApp API) ---
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# --- OpenAI (GPT-4o) ---
OPENAI_API_KEY=sk-your-openai-key

# --- App Config ---
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# --- FSM Recovery Templates (Twilio Content SIDs) ---
# Replace with actual template SIDs after Twilio/Meta approval
TEMPLATE_RELANCE_NOTE=HX_PLACEHOLDER_NOTE
TEMPLATE_RELANCE_DETAILS=HX_PLACEHOLDER_DETAILS
TEMPLATE_RELANCE_GOOGLE=HX_PLACEHOLDER_GOOGLE
